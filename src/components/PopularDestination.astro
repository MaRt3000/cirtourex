<section class="section section-alt">
  <div class="container">
    <div class="text-center mb-16">
      <h3 class="text-lg font-semibold text-var(--primary) mb-2 uppercase tracking-wider">Our</h3>
      <h2 class="text-4xl md:text-5xl font-bold text-var(--text-primary) mb-6">Popular Destinations</h2>
      <p class="text-xl text-var(--text-secondary) max-w-3xl mx-auto leading-relaxed">
        Explore our most popular travel destinations around the world, carefully curated for unforgettable experiences
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {destinations.map((destination, index) => (
        <div class="destination-card shadow-xs border border-gray-200 group cursor-pointer" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="relative overflow-hidden">
            <img 
              src={destination.image} 
              alt={destination.title} 
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110" 
            />
            <div class="absolute top-4 left-4">
              <span class="bg-white/90 backdrop-blur-sm text-var(--text-primary) px-3 py-1 rounded-full text-sm font-medium">
                {destination.category}
              </span>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-var(--text-primary) mb-3 group-hover:text-var(--primary) transition-colors">
              {destination.title}
            </h3>
            <p class="text-var(--text-secondary) leading-relaxed mb-4">
              {destination.description}
            </p>
            <a href="/contact" class="inline-flex items-center text-var(--primary) font-semibold hover:text-var(--primary-dark) transition-colors">
              Learn More
              <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
            </div>
        ))}
    </div>

    <div class="text-center mt-12">
