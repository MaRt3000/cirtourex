---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us ‚Äì Cirtourex Global Limited">
  <!-- Hero Section -->
  <section class="relative h-[500px] md:h-[600px] overflow-hidden">
    <img
      src="https://plus.unsplash.com/premium_photo-1661301206658-221bc7dbe361?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDIxfHx8ZW58MHx8fHx8"
      class="w-full h-full object-cover" 
      alt="Contact Us"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/70"></div>
    
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white leading-tight">
          Let's 
          <span class="gradient-text">Talk!</span>
        </h1>
        <p class="text-lg md:text-xl text-white/90 max-w-3xl mx-auto leading-relaxed">
          Whether you need visa guidance, immigration support, or travel insights ‚Äî we're here to help with speed, clarity, and a smile!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-16">
        <h3 class="text-lg font-semibold text-var(--primary) mb-2 uppercase tracking-wider">Contact</h3>
        <h2 class="text-3xl md:text-4xl font-bold text-var(--text-primary) mb-6">Visit or Reach Us</h2>
        <p class="text-xl text-var(--text-secondary) max-w-3xl mx-auto">
          Our consultants are always ready to guide you through your relocation and immigration journey. No bots, just helpful humans.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        <!-- Office Location -->
        <div class="contact-card card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-var(--primary)/10 to-var(--secondary)/10 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-var(--primary)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-var(--text-primary) mb-4">üìç Office Location</h3>
          <a
            href="https://www.google.com/maps/search/?api=1&query=319+Borno+Way,+Alagomeji,+Yaba,+Lagos+State,+Nigeria"
            target="_blank"
            rel="noopener noreferrer"
            class="text-var(--text-secondary) hover:text-var(--primary) transition-colors leading-relaxed block"
          >
            319, Borno Way, Alagomeji, Yaba, Lagos State, Nigeria
          </a>
        </div>

        <!-- Phone -->
        <div class="contact-card card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-var(--primary)/10 to-var(--secondary)/10 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-var(--primary)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-var(--text-primary) mb-4">üìû Call Us</h3>
          <a href="tel:+2348093917286" class="text-var(--text-secondary) hover:text-var(--primary) transition-colors text-lg font-medium block mb-2">
            +234 809 391 7286
          </a>
          <p class="text-sm text-var(--text-secondary)">Mon‚ÄìFri: 9AM‚Äì5PM</p>
        </div>

        <!-- Email -->
        <div class="contact-card card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-var(--primary)/10 to-var(--secondary)/10 rounded-2xl flex items-center justify-center mb-6 mx-auto group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-var(--primary)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-var(--text-primary) mb-4">‚úâÔ∏è Email</h3>
          <a href="mailto:glamourb2006@gmail.com" class="text-var(--text-secondary) hover:text-var(--primary) transition-colors text-lg font-medium block">
            glamourb2006@gmail.com
          </a>
        </div>
      </div>

      <!-- Map -->
      <div class="card p-4 rounded-2xl overflow-hidden">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1983.4565443327452!2d3.3755222999999997!3d6.5149285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x103b8d83974d4c13%3A0xa4512fdde16d2331!2s319%20Borno%20Way%2C%20Yaba%2C%20Lagos%2C%20Nigeria!5e0!3m2!1sen!2sng!4v1718726760994!5m2!1sen!2sng"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="rounded-xl"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- Support Promise -->
  <section class="section-alt">
    <div class="container">
      <div class="text-center mb-16">
        <h3 class="text-lg font-semibold text-var(--primary) mb-2 uppercase tracking-wider">Our Promise</h3>
        <h2 class="text-3xl md:text-4xl font-bold text-var(--text-primary) mb-6">Our Support Promise</h2>
        <p class="text-xl text-var(--text-secondary) max-w-3xl mx-auto">
          We treat every inquiry like it's the beginning of a great journey. Whether you're just exploring or ready to relocate, we'll answer you with clarity, care, and expert insight.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="promise-card card p-8 group">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-var(--primary) to-var(--primary-dark) rounded-full flex items-center justify-center text-white font-bold group-hover:scale-110 transition-transform duration-300">
              ‚úì
            </div>
            <div>
              <h3 class="text-xl font-semibold text-var(--text-primary) mb-3">Fast Replies</h3>
              <p class="text-var(--text-secondary) leading-relaxed">We reply to all emails within 24 hours during business days.</p>
            </div>
          </div>
        </div>

        <div class="promise-card card p-8 group">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-var(--primary) to-var(--primary-dark) rounded-full flex items-center justify-center text-white font-bold group-hover:scale-110 transition-transform duration-300">
              ‚úì
            </div>
            <div>
              <h3 class="text-xl font-semibold text-var(--text-primary) mb-3">No Confusing Terms</h3>
              <p class="text-var(--text-secondary) leading-relaxed">We explain everything in simple, friendly language.</p>
            </div>
          </div>
        </div>

        <div class="promise-card card p-8 group">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-var(--primary) to-var(--primary-dark) rounded-full flex items-center justify-center text-white font-bold group-hover:scale-110 transition-transform duration-300">
              ‚úì
            </div>
            <div>
              <h3 class="text-xl font-semibold text-var(--text-primary) mb-3">Real People</h3>
              <p class="text-var(--text-secondary) leading-relaxed">No robots. You'll talk to knowledgeable humans, always.</p>
            </div>
          </div>
        </div>

        <div class="promise-card card p-8 group">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-var(--primary) to-var(--primary-dark) rounded-full flex items-center justify-center text-white font-bold group-hover:scale-110 transition-transform duration-300">
              ‚úì
            </div>
            <div>
              <h3 class="text-xl font-semibold text-var(--text-primary) mb-3">Expert Advice</h3>
              <p class="text-var(--text-secondary) leading-relaxed">Our team has helped hundreds relocate with confidence.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Meet the Team -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-16">
        <h3 class="text-lg font-semibold text-var(--primary) mb-2 uppercase tracking-wider">Our Team</h3>
        <h2 class="text-3xl md:text-4xl font-bold text-var(--text-primary) mb-6">Meet Some of Our Team</h2>
        <p class="text-xl text-var(--text-secondary) max-w-3xl mx-auto">
          Dedicated professionals committed to making your global journey smooth and successful
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="team-card card p-8 text-center group">
          <div class="relative mb-6">
            <img 
              src="/images/team1.jpg" 
              alt="Comfort Isaac" 
              class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-var(--primary)/10 group-hover:border-var(--primary)/30 transition-colors duration-300" 
            />
            <div class="absolute inset-0 rounded-full bg-gradient-to-br from-var(--primary)/20 to-var(--secondary)/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-xl font-semibold text-var(--text-primary) mb-2">Comfort Isaac</h3>
          <p class="text-var(--text-secondary) mb-4">Visa Consultant (Canada/UK)</p>
          <div class="flex justify-center space-x-2">
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
          </div>
        </div>

        <div class="team-card card p-8 text-center group">
          <div class="relative mb-6">
            <img 
              src="https://images.unsplash.com/photo-1579038773867-044c48829161?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDEzfHx8ZW58MHx8fHx8" 
              alt="David Ross" 
              class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-var(--primary)/10 group-hover:border-var(--primary)/30 transition-colors duration-300" 
            />
            <div class="absolute inset-0 rounded-full bg-gradient-to-br from-var(--primary)/20 to-var(--secondary)/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-xl font-semibold text-var(--text-primary) mb-2">David Ross</h3>
          <p class="text-var(--text-secondary) mb-4">Client Support (Work Visas)</p>
          <div class="flex justify-center space-x-2">
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
          </div>
        </div>

        <div class="team-card card p-8 text-center group">
          <div class="relative mb-6">
            <img 
              src="https://plus.unsplash.com/premium_photo-1688350839154-1a131bccd78a?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDI3fHx8ZW58MHx8fHx8" 
              alt="Vera Lit" 
              class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-var(--primary)/10 group-hover:border-var(--primary)/30 transition-colors duration-300" 
            />
            <div class="absolute inset-0 rounded-full bg-gradient-to-br from-var(--primary)/20 to-var(--secondary)/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <h3 class="text-xl font-semibold text-var(--text-primary) mb-2">Vera Lit</h3>
          <p class="text-var(--text-secondary) mb-4">Relocation Advisor (Europe)</p>
          <div class="flex justify-center space-x-2">
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
            <div class="w-2 h-2 bg-var(--primary) rounded-full"></div>
          </div>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="text-center mt-16">
        <h3 class="text-2xl md:text-3xl font-bold text-var(--text-primary) mb-4">Ready to Start Your Journey?</h3>
        <p class="text-xl text-var(--text-secondary) mb-8 max-w-2xl mx-auto">
          Get in touch with our team today and take the first step toward your global adventure.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+2348093917286" class="btn-primary text-lg px-8 py-4">
            Call Us Now
          </a>
          <a href="mailto:glamourb2006@gmail.com" class="btn-outline text-lg px-8 py-4">
            Send Email
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
.contact-card {
  transition: all var(--transition-normal);
}

.contact-card:hover {
  transform: translateY(-8px);
}

.promise-card {
  transition: all var(--transition-normal);
}

.promise-card:hover {
  transform: translateY(-4px);
}

.team-card {
  transition: all var(--transition-normal);
}

.team-card:hover {
  transform: translateY(-8px);
}

/* Professional card shadows */
.card {
  box-shadow: var(--shadow-lg);
}

.card:hover {
  box-shadow: var(--shadow-xl);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .grid {
    gap: 1.5rem;
  }
}
</style>
